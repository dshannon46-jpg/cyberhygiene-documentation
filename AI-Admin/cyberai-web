#!/bin/bash
# Launcher script for CyberHygiene AI Admin Assistant - Web Mode

cd "$(dirname "$0")"
source venv/bin/activate

HOST="${1:-0.0.0.0}"
PORT="${2:-5000}"

echo "Starting CyberHygiene AI Admin Web Dashboard..."
echo "URL: http://$(hostname -I | awk '{print $1}'):${PORT}"
echo "Press Ctrl+C to stop"
echo ""

python3 web/app.py
